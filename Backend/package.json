{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for the application",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "rm -rf dist && prisma generate && esbuild ./src --bundle --platform=node --target=node18 --outfile=dist/index.js --format=cjs && cd dist && cp -r ../node_modules/.prisma . && cp ../node_modules/prisma/build/index.js prisma.js && zip -r index.zip index.js .prisma prisma.js",
    "build:socket": "rm -rf dist && prisma generate && esbuild ./src/socket-server.ts --bundle --platform=node --target=node18 --outfile=dist/socket-server.js --format=cjs && cd dist && cp -r ../node_modules/.prisma . && cp ../node_modules/prisma/build/index.js prisma.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "dotenv -e env.development -- prisma migrate dev",
    "prisma:migrate:deploy": "NODE_ENV=production ts-node src/scripts/migrate.ts",
    "prisma:reset:migrations": "NODE_ENV=production ts-node src/scripts/reset-migrations.ts",
    "prisma:studio": "dotenv -e env.development -- prisma studio",
    "prisma:reset": "dotenv -e env.development -- prisma migrate reset",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "minio:setup": "dotenv -e env.development -- ts-node src/scripts/setup-minio.ts",
    "dev": "dotenv -e env.development -- ts-node src/local-server.ts",
    "start:prod": "dotenv -e env.production -- ts-node src/local-server.ts",
    "dev:stop:server": "pkill -f 'ts-node src/local-server.ts' || echo 'Server not running'",
    "dev:clean": "npm run db:stop && npm run db:start && sleep 5 && npm run prisma:reset && npm run minio:setup && npm run emulators:start & npm run dev",
    "dev:full": "npm run db:start && sleep 5 && npm run minio:setup && npm run emulators:start & npm run dev",
    "dev:stop": "npm run dev:stop:server && npm run db:stop && npm run emulators:stop",
    "emulators:start": "firebase emulators:start --only auth --import=./firebase-data --export-on-exit=./firebase-data",
    "emulators:stop": "pkill -f 'firebase emulators:start' || echo 'Emulator not running'",
    "socket:dev": "dotenv -e env.development -- ts-node src/socket-server.ts",
    "socket:prod": "dotenv -e env.production -- ts-node src/socket-server.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.817.0",
    "@aws-sdk/client-secrets-manager": "^3.525.0",
    "@aws-sdk/s3-request-presigner": "^3.812.0",
    "@prisma/client": "^6.8.2",
    "@types/aws-sdk": "^2.7.0",
    "@types/dotenv": "^6.1.1",
    "@types/jsonwebtoken": "^9.0.5",
    "aws-sdk": "^2.1564.0",
    "dotenv": "^16.5.0",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.12",
    "@types/pg": "^8.10.9",
    "cors": "^2.8.5",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.25.2",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "prisma": "^6.8.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "firebase-tools": "^13.0.0"
  }
}
