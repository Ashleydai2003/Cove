# Cove WebApp Environment Configuration - LOCAL DEVELOPMENT WITH EMULATOR

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend API URL (for local development)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# =============================================================================
# FIREBASE CONFIGURATION - DEVELOPMENT PROJECT
# =============================================================================

# Firebase Development Project (cove-dev-2ead)
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_DEV_API_KEY
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=cove-dev-2ead.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=cove-dev-2ead
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=cove-dev-2ead.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=YOUR_DEV_SENDER_ID
NEXT_PUBLIC_FIREBASE_APP_ID=YOUR_DEV_APP_ID

# Use Firebase emulator
NEXT_PUBLIC_USE_EMULATOR=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment
NODE_ENV=development

# Enable development mode features
NEXT_PUBLIC_IS_DEV=true

